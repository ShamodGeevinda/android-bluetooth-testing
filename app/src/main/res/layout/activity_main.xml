<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

   <CheckBox
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/enable_bt"
       android:text="Enable"/>


   <CheckBox
       android:id="@+id/visible_bt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:text="Visible" />

   <TextView
       android:id="@+id/name_bt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:text="my bt name"
       android:textSize="20sp"
       android:textStyle="bold" />

   <ImageView
       android:id="@+id/search_bt"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/name_bt"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"
       android:layout_marginBottom="10dp"
       android:backgroundTint="#237AC0"
       android:padding="15dp"
       android:src="@drawable/ic_action_search" />

   <ImageView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/name_bt"
       android:padding="15dp"
       android:layout_marginTop="20dp"
       android:id="@+id/pair_bt"
       android:layout_marginBottom="10dp"
       android:backgroundTint="#237AC0"
       android:src="@drawable/ic_action_search"
       android:onClick="pairView"/>

   <ListView
       android:id="@+id/list_view"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/search_bt" />
</RelativeLayout>